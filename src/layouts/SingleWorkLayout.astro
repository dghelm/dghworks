---
import Layout from "../layouts/Layout.astro";
const { frontmatter } = Astro.props;
const { title, year, tags, category, description } = frontmatter;
---

<Layout title={frontmatter.title}>
	<main class="max-w-5xl xl:px-24 md:px-12 md:my-6 my-2 mx-auto px-6">
		<h1 class="font-bold text-4xl mb-2">{title}</h1>
		<h3 class="font-medium text-xl mb-2">{year}</h3>
		<p class="mb-4">{description}</p>
		<slot />
	</main>
</Layout>
