---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Welcome to Astro.">
	<div
		class="bg-zinc-800 vimeo-wrapper bg-gradient-to-b from-stone-600 to-zinc-800"
	>
		<!-- <iframe src="https://player.vimeo.com/video/315006013?background=1&autoplay=1&loop=1&byline=0&title=0"
			frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe> -->
		<iframe
			src="https://player.vimeo.com/video/315006013?background=1&loop=1&muted=1&autoplay=1&dnt=1"
			frameborder="0"
			allow="autoplay; encrypted-media;"></iframe>
	</div>
</Layout>

<style>
	.vimeo-wrapper {
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		z-index: -1;
		pointer-events: none;
		overflow: hidden;
	}
	.vimeo-wrapper iframe {
		width: 100vw;
		height: 56.25vw; /* Given a 16:9 aspect ratio, 9/16*100 = 56.25 */
		min-height: 100vh;
		min-width: 177.77vh; /* Given a 16:9 aspect ratio, 16/9*100 = 177.77 */
		position: absolute;
		top: 50%;
		left: 50%;
		transform: translate(-40%, -50%);
	}
</style>
