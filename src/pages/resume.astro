---
import Layout from "../layouts/Layout.astro";
import dayjs from "dayjs";

import resumeData from "../resume_data.json";

const { basics, work, education, languages, projects, volunteer } = resumeData;
---

<Layout title="Daniel Helm Resume">
	<main
		class="max-w-5xl xl:px-24 md:px-12 my-6 lg:my-12 mx-auto px-6 prose prose-sm lg:prose-base prose-neutral"
	>
		<section class="not-prose">
			<h1
				class="text-2xl md:text-3xl lg:text-4xl font-bold mb-1 lg:mb-4"
			>
				{basics.name}
			</h1>
			<h2 class="text-lg lg:text-xl font-medium mb-1 lg:mb-4">
				{basics.label}
			</h2>
			<div class="font-medium">
				{basics.location.city}, {
					basics.location.region
				},
				{basics.location.countryCode}A
			</div>
			<div>
				<span>
					{basics.email}
				</span>
			</div>
			<div class="mt-3 italic lowercase">
				{
					basics.profiles.map((item) => (
						<span class="mr-6">
							<a
								href={item.url}
								target="_blank"
								class="hover:underline"
							>
								{item.network}
							</a>
						</span>
					))
				}
			</div>
		</section>
		<section>
			<h2 class="!lg:mt-10">Summary</h2>
			<div><p>{basics.summary}</p></div>
		</section>
		<section>
			<h2>Experience</h2>
			<div>
				{
					work.map((item) => (
						<div class="mb-12">
							<h3>
								{item.position},
								<span class="font-normal">
									{
										item.name
									}
								</span>
							</h3>
							<h4>
								{dayjs(
									item.startDate
								).format(
									"MMM YYYY"
								)}
								-
								{dayjs(
									item.endDate
								).format(
									"MMM YYYY"
								)}
							</h4>
							<p>{item.summary}</p>
							{item.highlights && (
								// <h4 class="font-normal">Highlights</h4>
								<ul>
									{item.highlights.map(
										(
											highlight
										) => (
											<li>
												{
													highlight
												}
											</li>
										)
									)}
								</ul>
							)}
						</div>
					))
				}
			</div>
		</section>
		<section>
			<h2>Education</h2>
			<div>
				{
					education.map((item) => (
						<div>
							<h3>
								{item.studyType}{" "}
								- {item.area}
							</h3>
							<h4>
								{
									item.institution
								}
								,
								<span class="font-normal pl-1">
									{dayjs(
										item.startDate
									).format(
										"MMM YYYY"
									)}
									-
									{dayjs(
										item.endDate
									).format(
										"MMM YYYY"
									)}
								</span>
							</h4>
							{item.score && (
								<h4 class="font-normal italic">
									{
										item.score
									}
								</h4>
							)}
						</div>
					))
				}
			</div>
		</section>
		<section>
			<h2>Languages</h2>
			<div>
				{
					languages.map((item) => (
						<div>
							<h4>
								{item.language},
								<span class="font-normal">
									{
										item.fluency
									}
								</span>
							</h4>
						</div>
					))
				}
			</div>
		</section>
		<!-- <h2>Skills?</h2>
		<h2>Languages?</h2>
		<h2>Volunteer?</h2>
		<h2>Projects?</h2> -->
	</main>
</Layout>
